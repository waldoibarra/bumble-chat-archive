# EditorConfig is awesome: https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 100

# JavaScript / TypeScript
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2

# JSON and JSON-like
[*.{json,jsonc}]
indent_size = 2

# HTML / Web Components templates
[*.{html,htm}]
indent_size = 2

# CSS
[*.{css,scss}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = 0

# YAML
[*.{yml,yaml}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2
end_of_line = lf
